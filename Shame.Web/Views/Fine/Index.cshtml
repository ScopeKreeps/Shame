@model Shame.Web.Models.Fine.FineNominationModel

<div class="row">


    <div class="col-lg-9">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>@Model.Title</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.Nominee, Model.Followers.Select(x => new SelectListItem
                {
                    Value = x,
                    Text = x
                }))
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Offence, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Offence)
                        @Html.ValidationMessageFor(model => model.Offence)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-lg-3 well">
        @{
            Html.RenderPartial("_FineFeed", new List<string>());
        }
    </div>
</div>